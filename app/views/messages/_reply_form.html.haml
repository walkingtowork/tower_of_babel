= form_for @reply do |f|
  - if @reply.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reply.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @reply.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :sender_id, value: current_user.id
  .field
    = f.hidden_field :receiver_id, value: @message.sender.id
  .field
    = f.label :subject
    %br
    = f.text_field :subject
  .field
    = f.label :text
    %br
    = f.text_area :content
  .actions
    = f.submit 'Send'